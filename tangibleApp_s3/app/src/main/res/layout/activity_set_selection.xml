<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="40dp"
    tools:context=".Activities.SetSelection">


    <Button
        android:id="@+id/setA_btn"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="57dp"
        android:text="Set A"
        app:layout_constraintBaseline_toBaselineOf="@+id/setB_btn"
        app:layout_constraintEnd_toStartOf="@+id/setB_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/setB_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="9dp"
        android:text="Set B"
        app:layout_constraintBottom_toTopOf="@+id/transform_btn"
        app:layout_constraintEnd_toStartOf="@+id/setC_btn"
        app:layout_constraintStart_toEndOf="@+id/setA_btn"
        app:layout_constraintTop_toBottomOf="@+id/training_btn" />

    <Button
        android:id="@+id/setC_btn"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="33dp"
        android:text="Set C"
        app:layout_constraintBaseline_toBaselineOf="@+id/setB_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/setB_btn" />

    <Button
        android:id="@+id/training_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:layout_marginTop="175dp"
        android:text="Training"
        app:layout_constraintBottom_toTopOf="@+id/setB_btn"
        app:layout_constraintEnd_toEndOf="@+id/setB_btn"
        app:layout_constraintStart_toStartOf="@+id/setB_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/transform_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="205dp"
        android:text="Transformations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/setB_btn"
        app:layout_constraintStart_toStartOf="@+id/setB_btn"
        app:layout_constraintTop_toBottomOf="@+id/setB_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>