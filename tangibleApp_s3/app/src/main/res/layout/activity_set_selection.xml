<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="40dp"
    tools:context=".Activities.SetSelection">


    <Button
        android:id="@+id/setA_btn"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="232dp"
        android:layout_marginBottom="120dp"
        android:text="Set A"
        app:layout_constraintBottom_toTopOf="@+id/setC_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setB_btn"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="332dp"
        android:text="Set B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setC_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="179dp"
        android:text="Set C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/setB_btn"
        app:layout_constraintStart_toStartOf="@+id/setB_btn"
        app:layout_constraintTop_toBottomOf="@+id/setA_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>